{{#if teams}}<h1>There are {{teams.length}} teams in the database
</h1>

<table>
    <thead>
        <tr>
            <th>Team</th>
            <th>Country</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>

        {{/if}}
        {{#each teams}}
        <tr>
            <td>{{name}}</td>
            <td>{{area.name}}</td>
            <td><a href="/team/{{tla}}"><button>See</button></a></td>
            <td><a href="/team/{{tla}}"><button>Edit</button></a></td>
            <td><button>Delete</button></td>
            {{!-- todo: replace with icons --}}
            {{else}}<p>No teams exist! Add some to start!</p>
        </tr>
        {{/each}}
    </tbody>


</table>